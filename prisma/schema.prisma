generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  role Role?
}
model Role {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  user User @relation(fields: [userEmail],references: [email])
  userEmail String @unique
}